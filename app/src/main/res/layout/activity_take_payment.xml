<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	android:background="@color/white">



	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical">

		<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:text="FARE EARNED"
			android:layout_margin="25dp"
			android:layout_gravity="center"
			android:textStyle="bold"
			android:textSize="18dp"
			android:textColor="@color/black"/>
		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:gravity="center_horizontal"
			android:orientation="vertical">

			<ImageView
				android:layout_width="wrap_content"
				android:layout_height="200dp"
				android:src="@drawable/money_bag"/>

			<LinearLayout
				android:gravity="center"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginBottom="20dp">
			<TextView
				android:id="@+id/fare"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="00"
				android:textAppearance="@style/TextAppearance.FontPath"
				android:textColor="@color/colorPrimary"
				android:textSize="50sp" />

			<TextView
				android:id="@+id/prev_pymentType"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="cash"
				android:layout_centerVertical="true"
				android:layout_alignParentBottom="true"
				android:textAppearance="@style/TextAppearance.FontPath"
				android:textColor="@color/colorPrimary" />
			</LinearLayout>
		</LinearLayout>

		<!--<TextView
			style="@style/Base.TextAppearance.AppCompat.Large"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginBottom="10dp"
			android:gravity="center"
			android:text="Rate your Rider"
			android:textAppearance="@style/TextAppearance.FontPath"/>

		<RatingBar
			android:id="@+id/userRating"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_marginBottom="30dp"
			android:rating="2.5" />-->

		<Button
			style="@style/ButtonColor"
			android:layout_marginLeft="@dimen/height_20"
			android:layout_marginRight="@dimen/height_20"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="done"
			android:textColor="@color/white"
			android:text="DONE"/>

		<Button
			android:layout_marginBottom="@dimen/height_20"
			android:background="@drawable/round_border_black"
			android:layout_marginTop="@dimen/margin_10"
			android:layout_marginLeft="@dimen/height_20"
			android:layout_marginRight="@dimen/height_20"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:onClick="changepayment"
			android:textColor="@color/black"
			android:text="Change Payment type"/>
	</LinearLayout>

</ScrollView>
