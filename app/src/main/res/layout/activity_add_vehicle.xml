<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBack"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/header"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="@dimen/margin_10"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/app_logo_black"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"/>
    </RelativeLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="20dp">

                <TextView
                    android:id="@+id/txt_for_pass_logo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_logo"
                    android:layout_marginBottom="@dimen/margin_10"
                    android:text="Add Vehicle"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/height_25"/>


                <TextView
                    android:layout_marginTop="@dimen/margin_5"
                    android:id="@+id/service_type"
                    android:textSize="@dimen/height_17"
                    android:layout_width="match_parent"
                    style="@style/EditTextColor"
                    android:layout_height="@dimen/height_40"
                    android:hint="Service Type"
                    android:textColorHint="@color/dark_gray"
                    />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColorHint="@color/dark_gray">

                    <EditText
                        android:id="@+id/brand"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/height_17"
                        android:layout_width="match_parent"
                        style="@style/EditTextColor"
                        android:layout_height="@dimen/height_40"
                        android:hint="Brand Name"
                        android:inputType="textVisiblePassword"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="@color/dark_gray"
                        />
                </android.support.design.widget.TextInputLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@color/dark_gray"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColorHint="@color/dark_gray">

                    <EditText
                        android:id="@+id/vehicle_model"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/height_17"
                        android:layout_width="match_parent"
                        style="@style/EditTextColor"
                        android:layout_height="@dimen/height_40"
                        android:hint="Vehicle Model"
                        android:inputType="textVisiblePassword"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="@color/dark_gray"
                        />
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_5"
                    android:background="@color/dark_gray"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/dark_gray">

                    <EditText
                        android:id="@+id/number_plate"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/height_17"
                        android:layout_width="match_parent"
                        style="@style/EditTextColor"
                        android:layout_height="@dimen/height_40"
                        android:hint="Number Plate"
                        android:inputType="textVisiblePassword"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="@color/dark_gray"
                        />
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray"/>

                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_5"
                    android:textColorHint="@color/dark_gray">

                    <EditText
                        android:id="@+id/vehicle_color"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/height_17"
                        android:layout_width="match_parent"
                        style="@style/EditTextColor"
                        android:layout_height="@dimen/height_40"
                        android:hint="Color"
                        android:inputType="textVisiblePassword"
                        android:imeOptions="actionUnspecified"
                        android:textColorHint="@color/dark_gray"
                        />
                </android.support.design.widget.TextInputLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/dark_gray"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/height_20"
                    android:layout_marginBottom="10dp">

                    <TextView
                        android:layout_marginTop="@dimen/margin_10"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="10dp"
                        android:text="@string/terms_policy"/>

                    <Button
                        android:id="@+id/add_veh_nxt"
                        style="@style/ButtonColor"
                        android:layout_margin="15dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:text="NEXT"/>
                </LinearLayout>

            </LinearLayout>
        </ScrollView>

        <LinearLayout
            android:id="@+id/bike_type_layout"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="bottom"
            android:background="#AD4E4E4E"
            android:visibility="gone"
            android:orientation="vertical">
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="center"
                    android:background="@drawable/top_radius">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="18dp"
                        android:text="Choose Your Service Type"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:textColor="@color/white"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="#60000000"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>
                <android.support.v7.widget.RecyclerView
                    android:background="@color/white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="@dimen/height_20"
                    android:id="@+id/biketypes">
                </android.support.v7.widget.RecyclerView>
            </LinearLayout>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>