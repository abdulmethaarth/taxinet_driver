<resources>

	<!-- Base application theme. -->
	<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
		<!-- Customize your theme here. -->
		<item name="colorPrimary">@color/activityBack</item>
		<item name="colorPrimaryDark">@color/colorPrimaryDark</item>
		<item name="colorAccent">@color/colorAccent</item>
		<item name="windowActionBar">false</item>
		<item name="windowNoTitle">true</item>
	</style>

	<style name="Datepicker" parent="Theme.AppCompat">
		<!-- Customize your theme here. -->
		<item name="colorAccent">@color/activityBack</item>
	</style>

	<style name="ButtonColor" parent="Widget.AppCompat.Button">
		<item name="android:background">@drawable/btn_back_flat</item>
		<item name="android:textColor">@color/white</item>
		<item name="fontPath">fonts/font.ttf</item>
		<item name="android:textSize">17sp</item>
	</style>

	<style name="EditTextColor" parent="Widget.AppCompat.EditText">
		<item name="android:background">@color/white</item>
		<item name="android:textColor">@color/black</item>
		<item name="fontPath">fonts/font.ttf</item>
		<item name="android:textSize">17sp</item>
	</style>

	<style name="TextAppearance.FontPath" parent="android:TextAppearance">
		<item name="fontPath">fonts/font.ttf</item>
	</style>

	<style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

	<style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

</resources>
